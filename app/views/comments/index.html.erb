<h3> Comments for "  <%= @post.title %> "</h3> 
<table>
	<tr>
		<th>
			Commenter
		</th>
		<th>
			Body
		</th>
		<th colspan="3">
			Options
		</th>
	</tr>
	<% @comments.each  do |comment| %>
		<tr>
			<td><%=h comment.commenter  %></td>
			<td><%=h comment.body %></td>
			<td><%= link_to "Show" , post_comment_path(@post,comment) %></td>
			<td><%= link_to "Edit" ,  edit_post_comment_path(@post , comment) %></td>
			<td><%= link_to "Delete",  post_comment_path(@post , comment) , :method=> :delete , :prompt=>"Are you sure ? " %></td>
		</tr>	
	<% end %>
</table>
<br />

<%= link_to 'New Comment', new_post_comment_url(@post) %>
<%= link_to "Back to Post" , @post %>
