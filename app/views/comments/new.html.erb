<h1> New Comment </h1>
<%=form_for([@post , @comment]) do |f| %>
	<p>
		<%= f.label :commenter %><br />
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit "create" %>
	</p>
<% end %>
<%= link_to "Back" , post_comments_url(@post)%>
