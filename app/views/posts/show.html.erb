<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Context:</b>
  <%= @post.context %>
</p>
<h2>Comments </h2>
<%@post.comments.each do |comment| %>
	<p>
		<b>Commenter:	</b>
		<%=h comment.commenter %>
	</p>
	<p>
		<b>Comment-	</b>
		<%=h comment.body %>
	</p>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<%= link_to 'Manage Comment', post_comments_path(@post) %>
